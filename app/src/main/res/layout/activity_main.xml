<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDE9AB"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/id_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="Weather"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_weight="0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/id_text_zipcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Enter your zipcode: "
            android:textSize="18sp" />

        <EditText
            android:id="@+id/id_edit_zipcode"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:ems="10"
            android:hint="Zipcode"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_weight="0" />

        <Button
            android:id="@+id/id_button_weather"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0"
            android:background="@drawable/mybutton"
            android:text="Search" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/id_text_lat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Latitude:"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_text_lon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Longitude"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_text_town"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Town:"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_weight="0" />

    <TextView
        android:id="@+id/id_text_hourly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="Hourly Forecast"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_weight="0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_text_time_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="--:--"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="1:00 PM" />

            <TextView
                android:id="@+id/id_text_temp_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="--°F"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="italic"
                tools:text="10°F" />

            <TextView
                android:id="@+id/id_text_desc_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="---"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="italic"
                tools:text="Cloudy" />

            <ImageView
                android:id="@+id/id_image_1"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_text_time_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="--:--"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="2:00 PM" />

            <TextView
                android:id="@+id/id_text_temp_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="--°F"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="italic"
                tools:text="12°F" />

            <TextView
                android:id="@+id/id_text_desc_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="---"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="italic"
                tools:text="Cloudy" />

            <ImageView
                android:id="@+id/id_image_2"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_text_time_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="--:-- "
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="3:00 PM" />

            <TextView
                android:id="@+id/id_text_temp_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="--°F"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="italic"
                tools:text="13°F" />

            <TextView
                android:id="@+id/id_text_desc_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="---"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="italic"
                tools:text="Cloudy" />

            <ImageView
                android:id="@+id/id_image_3"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_text_time_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="--:--"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="4:00 PM" />

            <TextView
                android:id="@+id/id_text_temp_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="--°F"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="italic"
                tools:text="15°F" />

            <TextView
                android:id="@+id/id_text_desc_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="---"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="italic"
                tools:text="Cloudy" />

            <ImageView
                android:id="@+id/id_image_4"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>